# =============================================================================
# REDIS SERVICE SPECIFIC VARIABLES
# =============================================================================
# Тільки змінні, специфічні для Redis сервіса
# Загальні змінні (REDIS_HOST, REDIS_PORT) наслідуються з .env/.env.base

# =============================================================================
# REDIS CONNECTION CONFIGURATION
# =============================================================================
REDIS_BIND=0.0.0.0
REDIS_TIMEOUT=0
REDIS_TCP_KEEPALIVE=300

# =============================================================================
# REDIS MEMORY CONFIGURATION
# =============================================================================
REDIS_MAXMEMORY=256mb
REDIS_MAXMEMORY_POLICY=allkeys-lru
REDIS_MAXMEMORY_SAMPLES=5

# =============================================================================
# REDIS PERSISTENCE CONFIGURATION
# =============================================================================
REDIS_SAVE_ENABLED=yes
REDIS_SAVE_SECONDS=900
REDIS_SAVE_CHANGES=1
REDIS_STOP_WRITES_ON_BGSAVE_ERROR=yes
REDIS_RDBCOMPRESSION=yes
REDIS_RDBCHECKSUM=yes
REDIS_DBFILENAME=dump.rdb

# =============================================================================
# REDIS APPEND ONLY FILE (AOF)
# =============================================================================
REDIS_APPENDONLY=yes
REDIS_APPENDFILENAME=appendonly.aof
REDIS_APPENDFSYNC=everysec
REDIS_NO_APPENDFSYNC_ON_REWRITE=no
REDIS_AUTO_AOF_REWRITE_PERCENTAGE=100
REDIS_AUTO_AOF_REWRITE_MIN_SIZE=64mb

# =============================================================================
# REDIS LOGGING
# =============================================================================
REDIS_LOGLEVEL=notice
REDIS_LOGFILE=""
REDIS_SYSLOG_ENABLED=no

# =============================================================================
# REDIS CLIENT CONFIGURATION
# =============================================================================
REDIS_DATABASES=16
REDIS_TCP_BACKLOG=511
REDIS_UNIXSOCKET=""
REDIS_UNIXSOCKETPERM=700

# =============================================================================
# REDIS SECURITY
# =============================================================================
REDIS_REQUIREPASS=""
REDIS_RENAME_COMMAND=""

# =============================================================================
# REDIS SLOW LOG
# =============================================================================
REDIS_SLOWLOG_LOG_SLOWER_THAN=10000
REDIS_SLOWLOG_MAX_LEN=128
